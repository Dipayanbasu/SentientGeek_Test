@model SentientGeek_assesment.Models.Employee
@{
    Layout = null;
}

<style>

    .text-warning {
        color: #e4e70a;
    }

    .footer-popup {
        background-color: #ecf0f1;
        padding: 10px;
        text-align: right;
    }

    .body-area {
        padding: .5em 1em;
    }

    .ui-dialog .ui-dialog-content {
        padding: 0;
    }

    .form-group {
        margin-bottom: 0;
    }

    .ui-dialog {
        padding: 0;
    }

        .ui-dialog .ui-dialog-title {
            font-size: 18px;
            font-weight: 400;
        }
</style>
@using (Html.BeginForm("Edit", "home", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.EmpId)

    <div class="form-group">
        <div class="body-area">
            @Html.LabelFor(model => model.EmpName, new { @class = "control-label" })
            @Html.EditorFor(model => model.EmpName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EmpName)
        </div>
    </div>
    <div class="form-group">
        <div class="body-area">
            @Html.LabelFor(model => model.Address, new { @class = "control-label" })
            @Html.TextAreaFor(model => model.Address, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Address)
        </div>
    </div>
    <div class="form-group">
        <div class="body-area">
            @Html.LabelFor(model => model.Emailid, new { @class = "control-label" })
            @Html.EditorFor(model => model.Emailid, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Emailid)
        </div>
    </div>
    <div class="form-group">
        <div class="body-area">
            @Html.LabelFor(model => model.MobileNo, new { @class = "control-label" })
            @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MobileNo)
        </div>
    </div>
    <div class="footer-popup">
        <input type="button" value="Cancel" id="btnCancel" class="btn btn-link text-dark" />
        <input type="submit" value="Save" class="btn btn-success" />

    </div>
}
