@model SentientGeek_assesment.Models.mailsend

@{
    Layout = null;

    var reporttype = new List<SelectListItem>();
    reporttype.Add(new SelectListItem { Text = "PDF", Value = "pdf" });
    reporttype.Add(new SelectListItem { Text = "Excel", Value = "excel" });
}

<style type="text/css">

    .text-warning {
        color: #e4e70a;
    }

    .footer-popup {
        background-color: #ecf0f1;
        padding: 10px;
        text-align: right;
    }

    .body-area {
        padding: .5em 1em;
    }

    .ui-dialog .ui-dialog-content {
        padding: 0;
    }

    .form-group {
        margin-bottom: 0;
    }

    .ui-dialog {
        padding: 0;
    }

        .ui-dialog .ui-dialog-title {
            font-size: 18px;
            font-weight: 400;
        }
</style>

@using (Html.BeginForm("exportsendmail", "home", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    <div class="form-group">
        <div class="body-area">
            @Html.LabelFor(model => model.emailid, new { @class = "control-label" })
            @Html.EditorFor(model => model.emailid, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.emailid)
        </div>
    </div>
    <div class="form-group">
        <div class="body-area">
            @Html.LabelFor(model => model.reporttype, new { @class = "control-label" })
            @Html.DropDownListFor(model => model.reporttype, reporttype, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.reporttype)
        </div>
    </div>
    
    <div class="footer-popup">
        <input type="button" value="Cancel" id="btnCancel" class="btn btn-link text-dark" />
        <input type="submit" value="Send" class="btn btn-success" />

    </div>
}
